    <ThingDef Name="Base Basilisk War Droid" Abstract="True">
        <thingClass>Pawn</thingClass>
        <category>Pawn</category>
        <selectable>true</selectable>
        <tickerType>Normal</tickerType>
        <altitudeLayer>Pawn</altitudeLayer>
        <useHitPoints>false</useHitPoints>
        <hasTooltip>true</hasTooltip>
        <soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>
        <statBases>
            <Mass>70</Mass>
        </statBases>
        <inspectorTabs>
            <li>ITab_Pawn_Health</li>
            <li>ITab_Pawn_Needs</li>
            <li>ITab_Pawn_Character</li>
            <li>ITab_Pawn_Training</li>
            <li>ITab_Pawn_Social</li>
            <li>ITab_Pawn_Guest</li>
            <li>ITab_Pawn_Prisoner</li>
            <li>ITab_Pawn_FormingCaravan</li>
            <li>ITab_Pawn_Gear</li>
            <li>ITab_Pawn_Log</li>
        </inspectorTabs>
        <comps>
            <li>
                <compClass>CompAttachBase</compClass>
            </li>
        </comps>
        <drawGUIOverlay>true</drawGUIOverlay>
    </ThingDef>

    <PawnKindDef Name="Base Basilisk War Droid kind" Abstract="True">
        <aiAvoidCover>false</aiAvoidCover>
        <destroyGearOnDrop>false</destroyGearOnDrop>
    </PawnKindDef>

    <ThingDef ParentName="Base Basilisk War Droid">
        <defName>BasiliskWarDroidGreen</defName>
        <label>green basilisk</label>
        <description>green basilisk</description>
        <statBases>
            <MarketValue>45000</MarketValue>
            <MoveSpeed>3</MoveSpeed>
            <PsychicSensitivity>0</PsychicSensitivity>
            <ToxicSensitivity>0</ToxicSensitivity>
            <Flammability>0.5</Flammability>
            <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
            <ComfyTemperatureMin>-250</ComfyTemperatureMin>
            <ComfyTemperatureMax>250</ComfyTemperatureMax>
            <MeatAmount>0</MeatAmount>
            <LeatherAmount>0</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <label>left blade</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>20</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>right blade</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>20</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.9</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <race>
            <thinkTreeMain>Animal</thinkTreeMain>
            <thinkTreeConstant>AnimalConstant</thinkTreeConstant>
            <intelligence>ToolUser,Animal</intelligence>
            <makesFootprints>true</makesFootprints>
            <fleshType>Mechanoid</fleshType>
            <needsRest>false</needsRest>
            <hasGenders>false</hasGenders>
            <foodType>None</foodType>
            <wildness>0.7</wildness>
            <trainability>Advanced</trainability>
            <manhunterOnTameFailChance>0.1</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.35</manhunterOnDamageChance>
            <lifeExpectancy>1000</lifeExpectancy>
            <nameCategory>HumanStandard</nameCategory>
            <body>DroidAnimalWith6LegsAndTail</body>
            <baseBodySize>2</baseBodySize>
            <baseHealthScale>4.5</baseHealthScale>
            <wildBiomes>
		        <AridShrubland>0.1</AridShrubland>
		        <TemperateForest>0.1</TemperateForest>
		        <TropicalRainforest>0.1</TropicalRainforest>
		        <IceSheet>0.1</IceSheet>
		        <BorealForest>0.1</BorealForest>
		        <Tundra>0.1</Tundra>
		        <Desert>0.1</Desert>
	        </wildBiomes>
	        <nuzzleMtbHours>24</nuzzleMtbHours>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
                    <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
                    <soundCall>Pawn_Mech_Centipede_Call</soundCall>
                </li>
            </lifeStageAges>
            <soundCallIntervalRange>
                <min>1000</min>
                <max>2000</max>
            </soundCallIntervalRange>
            <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
            <hediffGiverSets>
                <li>OrganicStandard</li>
            </hediffGiverSets>
        </race>  
        <recipes>
            <li>InstallArtificialBrain</li>
            <li>InstallReactor</li>
            <li>InstallFluidReprocessor</li>
            <li>InstallTail</li>
            <li>InstallSightSensor</li>
            <li>InstallHearingSensor</li>
            <li>InstallMechLeg</li>
            <li>InstallPowerClaw</li>
			<li>ExciseCarcinoma</li>
            <li>AdministerMechSerumHealer</li>
            <li>RemoveBodyPart</li>
            <li>Euthanize</li>
            <li>Anesthetize</li>
        </recipes>
        <tradeTags>
            <li>AnimalCommon</li>
        </tradeTags> 
    </ThingDef>

